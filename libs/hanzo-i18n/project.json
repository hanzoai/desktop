{
  "name": "hanzo-i18n",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/hanzo-i18n/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project hanzo-i18n --web",
  "targets": {
    "generate-i18n": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/hanzo-i18n",
        "commands": ["npx tsx ./scripts/translations.ts"]
      }
    },
    "i18n": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/hanzo-i18n",
        "commands": ["npx tsx ./scripts/translations.ts && npx lobe-i18n"]
      }
    }
  }
}
